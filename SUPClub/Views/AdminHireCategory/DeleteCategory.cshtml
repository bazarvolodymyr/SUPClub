@model EditHireCategoryVM
@{
    string? strTitle = "Видалити категорію?";
    ViewBag.Title = strTitle;
}
<div>
    <h1>@strTitle</h1>
    <div class="div-box">
        <div class="div-box">
            <h2>
                <img class="img-block" width="100" height="100" src="~/img/@Model.ImageUrl" />
                @Model.Name
            </h2>
        </div>
        <form asp-controller="AdminHireCategory" asp-action="DeleteCategory" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="ImageUrl" />
            <input type="hidden" asp-for="IsActive" />
            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <input type="submit" value="Видалити" />
            </div>
        </form>
    </div>
</div>
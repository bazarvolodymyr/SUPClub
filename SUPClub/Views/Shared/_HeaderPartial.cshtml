<div id="header-wrapper">
	<div class="container">
		<header id="header">
			<div class="inner">
				<h1><a asp-area="" asp-controller="Home" asp-action="Index" id="logo">SUP-Club</a></h1>

				<!-- Nav -->
				<nav id="nav">
					<ul>
						<li>
							@if (User.Identity!.IsAuthenticated)
							{
								<form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
									<input type="submit" value="Вихід" />
								</form>
							}
							else
							{
								<a asp-area="" asp-controller="Account" asp-action="Login">Вхід</a>
								<a asp-area="" asp-controller="Account" asp-action="Register">Регістрація</a>
							}
						</li>
					</ul>
				</nav>
			</div>
		</header>
	</div>
</div>